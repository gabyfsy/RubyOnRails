<p id="notice"><%= notice %></p>

<h1>Direcciones</h1>

<table>
  <thead>
    <tr>
      <th>Calle</th>
      <th>Ciudad</th>
      <th>Estado</th>
      <th>Usuario</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @direccions.each do |direccion| %>
      <tr>
        <td><%= direccion.calle %></td>
        <td><%= direccion.ciudad %></td>
        <td><%= direccion.estado %></td>
        <td><%= direccion.usuario_id %></td>
        <td><%= link_to 'Mostrar', direccion %></td>
        <td><%= link_to 'Editar', edit_direccion_path(direccion) %></td>
        <td><%= link_to 'Eliminar', direccion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

